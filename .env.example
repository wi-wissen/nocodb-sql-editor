# Datenbank-Konfiguration
DB_HOST=root_db
DB_USER=root
DB_PASSWORD=password
DB_NAME=nocodb

# Admin-Benutzer
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin@example.com

# Ports
NOCODB_PORT=80
SQL_EDITOR_PORT=8081
PHPMYADMIN_PORT=8080

# Domain-Konfiguration
NC_PUBLIC_URL=http://localhost

# NocoDB-Optionen
NC_INVITE_ONLY_SIGNUP=1
NC_DISABLE_TELE=1

# phpMyAdmin-Konfiguration
PMA_USER=root
PMA_PASSWORD=password

# SQL-Editor-Konfiguration
PHP_BASE_PATH=/sql/

# Datenverzeichnis f√ºr persistente Daten
DATA_DIR=./data

# phpMyAdmin-Konfiguration
# Bei Verwendung mit Nginx unter /phpmyadmin aktivieren:
# PMA_ABSOLUTE_URI=http://localhost/phpmyadmin/
